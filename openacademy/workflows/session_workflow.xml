<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wkf_openacademy_session" model="workflow">
            <field name="name">openacademy.session.basic</field>
            <field name="osv">openacademy.session</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activity -->
        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_openacademy_session"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
        </record>

        <record id="act_under_review" model="workflow.activity">
            <field name="wkf_id" ref="wkf_openacademy_session"/>
            <field name="name">under_review</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'under_review'})</field>
        </record>

        <record id="act_enrollment" model="workflow.activity">
            <field name="wkf_id" ref="wkf_openacademy_session"/>
            <field name="name">enrollment</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'enrollment'})</field>
        </record>

        <record id="act_ongoing" model="workflow.activity">
            <field name="wkf_id" ref="wkf_openacademy_session"/>
            <field name="name">ongoing</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'ongoing'})</field>
        </record>

        <record id="act_finished" model="workflow.activity">
            <field name="wkf_id" ref="wkf_openacademy_session"/>
            <field name="flow_stop">True</field>
            <field name="name">finished</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'finished'})</field>
        </record>

        <record id="act_rejected" model="workflow.activity">
            <field name="wkf_id" ref="wkf_openacademy_session"/>
            <field name="name">rejected</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'rejected'})</field>
        </record>

        <record id="act_cancelled" model="workflow.activity">
            <field name="wkf_id" ref="wkf_openacademy_session"/>
            <field name="flow_stop">True</field>
            <field name="name">cancelled</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'cancelled'})</field>
        </record>

        <!-- Transistion -->
        <record id="trans_draft_under_review" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_under_review"/>
            <field name="signal">set_under_review</field>
        </record>

        <record id="trans_under_review_enrollment" model="workflow.transition">
            <field name="act_from" ref="act_under_review"/>
            <field name="act_to" ref="act_enrollment"/>
            <field name="signal">set_enrollment</field>
        </record>

        <record id="trans_enrollment_ongoing" model="workflow.transition">
            <field name="act_from" ref="act_enrollment"/>
            <field name="act_to" ref="act_ongoing"/>
            <field name="signal">set_ongoing</field>
        </record>

        <record id="trans_ongoing_finished" model="workflow.transition">
            <field name="act_from" ref="act_ongoing"/>
            <field name="act_to" ref="act_finished"/>
            <field name="signal">set_finished</field>
        </record>

        <record id="trans_under_review_rejected" model="workflow.transition">
            <field name="act_from" ref="act_under_review"/>
            <field name="act_to" ref="act_rejected"/>
            <field name="signal">set_rejected</field>
        </record>

        <record id="trans_enrollment_cancelled" model="workflow.transition">
            <field name="act_from" ref="act_enrollment"/>
            <field name="act_to" ref="act_cancelled"/>
            <field name="signal">set_cancelled</field>
        </record>

        <record id="trans_rejected_draft" model="workflow.transition">
            <field name="act_from" ref="act_rejected"/>
            <field name="act_to" ref="act_draft"/>
            <field name="signal">set_draft</field>
        </record>

        <record id="trans_rejected_cancelled" model="workflow.transition">
            <field name="act_from" ref="act_rejected"/>
            <field name="act_to" ref="act_cancelled"/>
            <field name="signal">set_cancelled</field>
        </record>
    </data>
</openerp>
